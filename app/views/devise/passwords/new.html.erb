<h1 class="heading-large">
  Reset your password
</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-group <%= 'error' if f.object.errors[:email].any? %>">
    <%= f.label :email, class: 'form-label' %>
    <% if f.object.errors[:email].any? %>
      <span class="error-message">Email <%= f.object.errors[:email].first %></span>
    <% end %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Send me reset password instructions", class: "button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%= link_to 'Back', root_path, class: "link-back" %>
